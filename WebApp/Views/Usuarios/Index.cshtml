@{
    ViewData["Title"] = "Busqueda de Usuarios";
}
<h1>Busqueda de Registros</h1>
<div class="row">
    <form method="get" action="/Usuarios/Buscar" data-ajax="true" data-ajax-method="GET" data-ajax-update="#resultados"
        data-ajax-mode="replace" id="search-form">
        <div class="row g-3 align-items-center">
            <div class="col-md-8">
                <input type="text" name="searchTerm" class="form-control"
                    placeholder="Ingrese término de búsqueda..." />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </div>
    </form>
</div>

<div id="resultados"></div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}