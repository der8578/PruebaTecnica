@using Data.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}
@model ProductoModel

<h1>Registro de Productos</h1>
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form method="post" action="/Producto/Grabar" data-ajax="true" data-ajax-method="POST" id="save-form"
            data-ajax-success="onSuccessProducto">
            <div class="form-group mb-3">
                <label asp-for="Nombre">Nombre Producto</label>
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label asp-for="Unidad">Unidad</label>
                @Html.TextBoxFor(x => x.Unidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Unidad, "", new { @class = "text-danger" })
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary" id="btn-crear">Grabar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="module" src="~/js/Producto/producto.js" asp-append-version="true"></script>
}